<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title.Secondary" parent="Text">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title1" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Mulish.Medium.Title" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Label" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Label.Mini" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Label.Medium" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Label.Medium.Mini" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Label.SemiBold" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Default" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Text.Default.Regular" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Text.Badge" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Text.BadgeMini" parent="Text">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Text.Montserrat.Normal.White" parent="Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Normal.Green" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:background">@drawable/background_green_rounded</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Normal.Gray" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:background">@drawable/background_green_rounded</item>
        <item name="backgroundTint">@color/colorLightGrey</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Small.Blue" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">204dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:background">@drawable/background_selectable_blue_rounded</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Outline.Blue" parent="Button.Normal.Green">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:background">@drawable/background_blue_border_oval</item>
    </style>

    <style name="Button.Outline.Red" parent="Button.Normal.Green">
        <item name="android:textColor">@color/colorError_2</item>
        <item name="android:background">@drawable/background_error_2_border_oval</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog_drawable</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="rippleColor">@color/colorBlueLight</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">@color/selector_color_chip</item>
        <item name="android:textColor">@color/selector_color_chip_text</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearance.Rounded.Small" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="EditText.Input.Simple" parent="Text.Default">
        <item name="android:background">@drawable/selector_input_text</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColorHint">@color/gray_70</item>
    </style>

    <style name="FullScreenLoaderTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/loaderBackground</item>
    </style>

</resources>