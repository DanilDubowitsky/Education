<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_rounded_large"
    android:layout_marginVertical="8dp"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="24dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtQuestionNumberShimmer"
        style="@style/Text.Label.SemiBold"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_grey_round_small"
        android:paddingHorizontal="11dp"
        android:paddingVertical="6dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestionShimmer"
        style="@style/Text.Label"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:background="@drawable/background_grey_round_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtQuestionNumberShimmer"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestionNumberShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>