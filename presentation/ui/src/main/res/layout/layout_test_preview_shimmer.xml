<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtThemeShimmer"
        style="@style/Text.Badge"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_grey_round_small"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTestPassTimeShimmer"
        style="@style/Text.Label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_grey_round_small"
        android:drawablePadding="8dp"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="8dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtThemeShimmer" />

    <TextView
        android:id="@+id/txtTitleShimmer"
        style="@style/Text.Label.SemiBold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_grey_round_small"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtThemeShimmer" />

    <TextView
        android:id="@+id/txtLabelAboutTestShimmer"
        style="@style/Text.Label.SemiBold"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/background_grey_round_small"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleShimmer" />

    <TextView
        android:id="@+id/txtDescriptionShimmer"
        style="@style/Text.Label"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_grey_round_small"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="6"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelAboutTestShimmer" />

    <TextView
        android:id="@+id/txtQuestionsCountShimmer"
        style="@style/Text.Label.SemiBold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/background_grey_round_small"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescriptionShimmer" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestionsCountShimmer">

        <include layout="@layout/layout_short_test_shimmer" />

        <include layout="@layout/layout_short_test_shimmer" />

        <include layout="@layout/layout_short_test_shimmer" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>